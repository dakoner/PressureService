<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.android.apps.pressureservice">
    <uses-permission android:name="android.permission.INTERNET" />

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@drawable/ic_launcher" android:theme="@style/AppTheme">

        <service android:name=".LocalService" android:stopWithTask="true" />

        <activity android:name=".LocalServiceActivities$Controller"
            android:label="@string/activity_local_service_controller">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="MyOnBootReceiver" >
        <intent-filter>
            <action android:name="android.intent.action.BOOT_COMPLETED" />
        </intent-filter>
        </receiver>
    </application>

</manifest>
